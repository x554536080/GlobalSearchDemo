<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hist_item"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    >

    <TextView
        android:id="@+id/hist_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/hist_item_pressed"
        android:gravity="center"
        android:text=""
        android:textSize="15sp"
        android:textColor="#CFFFFFFF"
        android:maxEms="8"
        android:ellipsize="end"
        android:singleLine="true"/>


    <Button
        android:id="@+id/hist_item_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:background="@drawable/search_edit_text_clear_btn_normal" />


</FrameLayout>
